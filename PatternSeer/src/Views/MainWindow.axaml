<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    x:Class="PatternSeer.Views.MainWindow"
    Width="800" Height="600"
    Title="PatternSeer" Icon="\assets\logo.ico">
    <Panel>
        <Grid ColumnDefinitions="5*,2*">
            <Grid Grid.Column="0">
                <Border Name="preview" Background="green" Grid.Row="0"/>
                <Border Name="footer" Background="Red" 
                VerticalAlignment="Bottom" Height="20" Grid.Row="1"/>
            </Grid>
            <Border Name="info" Grid.Column="1" Background="Blue" />
        </Grid>
    </Panel>
</Window>