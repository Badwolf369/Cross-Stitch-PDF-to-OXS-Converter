<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    x:Class="PatternSeer.Views.MainWindow"
    x:Name="mainwindow"
    Width="400" Height="300"
    Title="PatternSeer" Icon="\assets\logo.ico">
    <Panel>
        <StackPanel
            VerticalAlignment="Top"
            Orientation="Horizontal" Spacing="0" Background="#f0f0f0">
            <Button Content="File" Background="#f0f0f0">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuItem Header="Open" Command="{Binding OpenFilePicker}"/>
                        <MenuItem Header="Exit" Command="{Binding Exit}"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>
    </Panel>
</Window>